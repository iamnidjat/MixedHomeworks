<Window x:Class="GameLibrary.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLibrary.Views"
        xmlns:vm="clr-namespace:GameLibrary.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:HomeVM}">
            <local:HomeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AddVM}">
            <local:AddView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UpdateVM}">
            <local:UpdateView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DeleteVM}">
            <local:DeleteView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CustVM}">
            <local:CustView />
        </DataTemplate>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentViewModel}" />
</Window>
