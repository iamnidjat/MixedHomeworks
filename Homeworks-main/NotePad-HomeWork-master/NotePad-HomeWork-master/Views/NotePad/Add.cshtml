<link href="~/css/add.css" type="text/css" rel="stylesheet" />

<h1>Input your task's details</h1>

<form method="post" asp-action="AddItem" asp-controller="NotePad" id="add-submit-form">
    <div><input type="text" id="title" name="title" placeholder="Title..." /></div>
    <div><input type="text" id="description" name="description" placeholder="Description..." /></div>
    <div><input type="date" id="date" name="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" /></div>
    <div><input type="text" id="tag" name="tag" placeholder="Example: #mytag" /></div>
    <div><input type="submit" id="add-todo-item" value="Add" /></div>
</form>